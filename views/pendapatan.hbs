    <table class="table table-hover">
        <thead>
            <tr>
                
                <th>ID TRANSAKSI</th>
                
                <th>KETERANGAN</th>
                <th>JUMLAH</th>
                <th>BUKAN SIHIR!</th>
                
            </tr>
        </thead>
        
        <tbody class="table table-active">
            {{#each data}}
            <tr>
                 <td>{{ id_transaksi }}</td>
                <td>{{ keterangan }}</td>
                <td>{{ jumlah }}</td>
             <td><a href="/hapus-id_transaksi/{{ id_transaksi }}"><button>SULAP!</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    
