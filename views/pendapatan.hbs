    <form action="/pendapatan" method="POST">
     <input type="text" name="inputketerangan" placeholder="KETERANGAN">
    <input type="text" name="inputjumlah" placeholder="JUMLAH">
     <button type="submit"> KENA TIPU!</button>
    </form>
